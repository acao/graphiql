{
  "packages": ["packages/*", "examples/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "allowBranch": ["master", "1.0.0"],
      "preDistTag": "next",
      "distTag": "latest",
      "conventionalCommits": true
    },
    "version": {
      "ignoreChanges": [
        "'__tests__' '**/*.spec.js' '**/*.spec.js' '**/*.spec.ts'",
        "**/examples"
      ],
      "message": "chore(release): publish",
      "conventionalCommits": true,
      "createRelease": "github"
    }
  }
}
